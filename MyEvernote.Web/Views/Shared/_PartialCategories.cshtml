@using MyEvernote.BusinessLayer
@using MyEvernote.Entities

@{
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}

<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href="@Url.Action("Index", "Home")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> Tümü</a> <!--Url kısmını hem bu satırdaki gibi hemde foreach içindeki a hrefdeki gibi yazabiliriz.-->

    @foreach (Category cat in list)
    {
        <a href="Home/ByCategory/@cat.Id"
           title="@cat.Description"
           class="list-group-item">
            <span class="glyphicon glyphicon-arrow-right"></span> @cat.Title
        </a> <!--Burada href te "Category/Select/cat.Title" idi CategoryControllerda tempData kullanmak gerekmesin diye HomeController a yönlendirildi.-->
    }

</div>